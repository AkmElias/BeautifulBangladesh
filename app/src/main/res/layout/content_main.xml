<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:showIn="@layout/activity_main">





    <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />



<ScrollView
    android:layout_width="match_parent"

    android:layout_height="wrap_content">



    <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_margin="10dp">






        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/sliderMain"

            android:layout_width="match_parent"
            android:layout_height="200dp" />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Cetagorytv"
            android:text="Find where you want to Lost"
            android:layout_below="@+id/sliderMain"
            android:padding="10dp"
            android:textColor="#141823"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_alignParentLeft="true"/>




        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/Cetagorytv"
            android:id="@+id/recycleViewCetagoryOne"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/recycleViewCetagoryOne"
            android:id="@+id/recycleViewCetagoryTwo"
            android:layout_margin="10dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mapLayout"
            android:layout_below="@+id/recycleViewCetagoryTwo"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_margin="10dp"
            xmlns:wheel="http://schemas.android.com/tools"
            app:cardElevation="3dp"
            app:cardUseCompatPadding="true">





                <ImageView
                    android:id="@+id/card_image"
                    android:layout_width="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/map"
                    android:layout_height="350dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#7F000000"

                />



                <TextView

                    android:layout_alignParentLeft="true"
                    android:id="@+id/card_title"
                    android:text="Welcome to Bangladesh"
                    android:layout_gravity="bottom|left"
                    android:textColor="#fff"
                    android:background="#27ae60"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ecf0f1"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="10dp"
                android:padding="10dp"
                android:text="Get to know interesting places and available services in Bangladesh  "/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SEE MAP"
                android:padding="10dp"
                android:id="@+id/seeMap"
                android:textColor="#ecf0f1"
                android:layout_gravity="bottom|right"
                />

        </android.support.v7.widget.CardView>








 </RelativeLayout>
</ScrollView>









</LinearLayout>
