<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#ffffff">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="5dp">


			<de.hdodenhof.circleimageview.CircleImageView
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:src="@drawable/placeholder"
				android:layout_marginLeft="10dp"
				android:layout_gravity="center"
				android:id="@+id/card_image" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/card_image"
				android:text="Cast"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				android:textColor="#000000"
				android:layout_gravity="center"
				android:id="@+id/card_name" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/time"
				android:textColor="#000"
				android:layout_marginTop="3dp"
				android:layout_marginLeft="10dp"
				android:layout_below="@+id/card_name"
				android:layout_toRightOf="@+id/card_image"
				android:text="12 jul 2017"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:orientation="horizontal"
				android:id="@+id/layoutReview"
				android:layout_below="@+id/time"
				android:layout_toRightOf="@+id/card_image"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="5dp"
				android:layout_height="wrap_content">

				<ImageButton
					android:id="@+id/r1"
					android:layout_width="20dp"
					android:padding="0dp"
					android:layout_gravity="right"
					android:foregroundGravity="right"
					android:background="@drawable/rating"
					android:layout_height="25dp" />
				<ImageButton
					android:id="@+id/r2"
					android:layout_width="20dp"
					android:padding="0dp"
					android:background="@drawable/rating"
					android:layout_gravity="right"
					android:layout_height="25dp" />
				<ImageButton
					android:id="@+id/r3"
					android:layout_width="20dp"
					android:padding="0dp"
					android:background="@drawable/rating"
					android:layout_gravity="right"
					android:layout_height="25dp"  />
				<ImageButton
					android:id="@+id/r4"
					android:layout_width="20dp"
					android:padding="0dp"
					android:background="@drawable/rating"
					android:layout_gravity="right"
					android:layout_height="25dp"  />
				<ImageButton
					android:id="@+id/r5"
					android:layout_width="20dp"
					android:padding="0dp"
					android:background="@drawable/rating"
					android:layout_gravity="right"
					android:layout_height="25dp"  />
			</LinearLayout>



			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/layoutReview"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="5dp"
				android:layout_toRightOf="@+id/card_image"
				android:id="@+id/card_title"

				android:textColor="#000000"
				android:text="amr nam hridoy amr nam hridoyamr nam hridoyamr nam hridoyamr nam hridoyamr nam hridoyamr nam hridoyamr nam hridoy"/>

			<View
				android:layout_width="fill_parent"
				android:layout_height="1dp"
				android:layout_marginBottom="4dp"
				android:layout_below="@+id/card_title"
				android:layout_marginTop="4dp"
				android:background="@color/colorDivider">

			</View>
		</RelativeLayout>


	</LinearLayout>



